{
	"$schema": "https://json.schemastore.org/prettierrc.json",
	"tabWidth": 2,
	"printWidth": 100,
	"semi": true,
	"useTabs": true,
	"singleQuote": false,
	"bracketSpacing": true,
	"endOfLine": "auto",
	"arrowParens": "always",
	"trailingComma": "all",
	"overrides": [
		{
			"files": ["*.html", "*.js", "*.jsx", "*.ts", "*.tsx"],
			"options": {
				"tabWidth": 2
			}
		}
	],
	"plugins": ["prettier-plugin-tailwindcss"]
}
